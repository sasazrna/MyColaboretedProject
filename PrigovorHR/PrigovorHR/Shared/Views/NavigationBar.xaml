<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrigovorHR.Shared.Views.NavigationBar">
  <ContentView.Content>
    <Frame x:Name="frmTopBar" Padding="0" VerticalOptions="Start" >
      <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="White">
        <Image x:Name="ImgBack" Source="arrow_right.png" WidthRequest="40" Rotation="180"></Image>
        <StackLayout x:Name="imgLogoLayout" Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Padding="-60,0,0,0" IsVisible="True">
          <Image x:Name="imgLogo" Aspect="AspectFit" Scale="0.85" Source="LOGO.png" HorizontalOptions="CenterAndExpand" />
          <StackLayout Orientation="Vertical" VerticalOptions="Center">
            <Label x:Name="LblNavigationTitle"  Text="Prigovor.HR" TextColor="Black" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" />
          </StackLayout>
        </StackLayout>
      </StackLayout>
    </Frame>
  </ContentView.Content>
</ContentView>
