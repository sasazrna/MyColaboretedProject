<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="PrigovorHR.Shared.Views.ContactPersonsView" 
             BackgroundColor="White">
  <ContentView.Content>
    <ScrollView>
      <StackLayout Padding="15, 20, 15, 5" >
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand"  >
          <Image x:Name ="imgUserImage" Source="ikonica.png"  WidthRequest="30" HeightRequest="30" HorizontalOptions = "End" VerticalOptions = "Start"/>
          <StackLayout HorizontalOptions="FillAndExpand" >
            <Label x:Name="lblName" Text="Josip Perić"  FontSize="Medium" TextColor="Black"  />
            <Label x:Name="lblEMail" Text="josip.peric@gmail.com"  FontSize="Medium" TextColor="#79b2d6" Margin="0,-5, 0, 0" />
            <Label x:Name="lblTelephone" Text="01 6544 239"  FontSize="Medium" TextColor="Black" Margin="0,-5, 0, 0" />
          </StackLayout>
        </StackLayout>
      </StackLayout>
    </ScrollView>
  </ContentView.Content>
</ContentView>
