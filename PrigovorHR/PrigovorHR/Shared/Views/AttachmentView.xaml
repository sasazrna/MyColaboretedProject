<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             BackgroundColor="White"
             xmlns:Views="clr-namespace:Complio.Shared.Views"
             x:Class="Complio.Shared.Views.AttachmentView">
    <ContentView.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand">
                <Image x:Name="imgAttachment" Source="attach.png" WidthRequest="15"  />
                <Label x:Name="lblAttachmentName" Text="attachment01.pdf" FontSize="Small" TextColor="#529bca" LineBreakMode="TailTruncation" HorizontalOptions = "StartAndExpand"/>
                <Views:FontAwesomeLabel x:Name="imgClose" FontSize="Large" HorizontalOptions="End" IsVisible="False">
                </Views:FontAwesomeLabel>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>
