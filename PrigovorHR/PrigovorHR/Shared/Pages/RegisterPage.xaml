                <StackLayout>
                    <StackLayout Padding="0, 30, 0, 0" >
                        <Label Text="Registracija email adresom:" FontSize="Large" HorizontalTextAlignment="Center" TextColor="Black" />
                    </StackLayout>

                    <Frame HasShadow="True" OutlineColor="#FF6A00">
                        <StackLayout Padding="0,0,0,0" Spacing="-2">
                            <Label Text="Vaše ime:" FontSize="Medium" HorizontalTextAlignment="Start" TextColor="Silver"/>
                            <Entry x:Name="NameEntry"  Placeholder="Upišite vaše ime" TextColor="Black" PlaceholderColor="Black" FontSize="Medium" />
                            <Label Text="Vaše prezime:" FontSize="Medium" HorizontalTextAlignment="Start" TextColor="Silver"/>
                            <Entry x:Name="SurnameEntry" Placeholder="Upišite vaše prezime" TextColor="Black" PlaceholderColor="Black" FontSize="Medium" />

                            <Label x:Name="lblEmail" Text="Upišite e-mail:" FontSize="Medium" HorizontalTextAlignment="Start" TextColor="Silver"/>
                            <Entry x:Name="EmailEntry" Placeholder="Upišite vaš email" TextColor="Black" PlaceholderColor="Black" FontSize="Medium" />
                            <Label x:Name="lblPassword" Text="Upišite lozinku:" FontSize="Medium" HorizontalTextAlignment="Start" TextColor="Silver"/>
                            <Entry x:Name="PasswordEntry" Placeholder="Upišite lozinku" IsPassword="true" TextColor="Black" PlaceholderColor="Black" FontSize="Medium" />
                        </StackLayout>
                    </Frame>
                    <Label x:Name="lblTerms" Text="Registracijom prihvaćate uvjete korištenja" FontSize="Medium" HorizontalTextAlignment="Start" TextColor="Blue" Margin="0,50,0,0"/>

                    <StackLayout VerticalOptions="CenterAndExpand" Margin="0,20,0,0">
                        <Button x:Name="btnRegister" Text="Registriraj me" TextColor="White" FontSize="Medium"  BackgroundColor="#FF6A00"/>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </StackLayout>
