                <StackLayout>
                    <StackLayout Padding="0, 10, 0, 0" >
                        <Label Text="Registracija email adresom:" FontSize="Large" HorizontalTextAlignment="Center" TextColor="Black" />
                    </StackLayout >

                 
                        <StackLayout>
                            <Label Text="Vaše ime:" FontSize="Medium" HorizontalTextAlignment="Start" TextColor="Silver" IsVisible="False"/>
                        <customcontrols:Entry x:Name="NameEntry" Placeholder="Upišite vaše ime" TextColor="Black" PlaceholderColor="#FF7e65" FontSize="Medium" Margin="0,10,0,10" />
                            <Label Text="Vaše prezime:" FontSize="Medium" HorizontalTextAlignment="Start" TextColor="Silver" IsVisible="False"/>
                        <customcontrols:Entry x:Name="SurnameEntry" Placeholder="Upišite vaše prezime" TextColor="Black" PlaceholderColor="#FF7e65" FontSize="Medium" Margin="0,10,0,5" />

                            <Label x:Name="lblEmail" Text="Upišite e-mail:" FontSize="Medium" HorizontalTextAlignment="Start" TextColor="Silver" IsVisible="False"/>
                        <customcontrols:Entry x:Name="EmailEntry" Placeholder="Upišite vaš email" TextColor="Black" PlaceholderColor="#FF7e65" FontSize="Medium" Margin="0,10,0,5" />
                            <Label x:Name="lblPassword" Text="Upišite lozinku:" FontSize="Medium" HorizontalTextAlignment="Start" TextColor="Silver" IsVisible="False"/>
                        <customcontrols:Entry x:Name="PasswordEntry" Placeholder="Upišite lozinku" IsPassword="true" TextColor="Black" PlaceholderColor="#FF7e65" FontSize="Medium" Margin="0,10,0,0" />
                        </StackLayout>

                    <Label x:Name="lblTerms" Text="Registracijom prihvaćate uvjete korištenja" FontSize="Medium" HorizontalTextAlignment="Start" TextColor="#79b2d6" Margin="0,50,0,0"/>

                    <StackLayout VerticalOptions="CenterAndExpand" Margin="0,20,0,0">
                        <Button x:Name="btnRegister" Text="Registriraj me" TextColor="White" FontSize="Medium" BackgroundColor="#FF7e65"/>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </StackLayout>
