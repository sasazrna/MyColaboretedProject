<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrigovorHR.Shared.Pages.ComplaintSentPage">

  <ScrollView>
    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="0,-30,0,0" Margin="0,-35,0,0" >
            <Image Source="imgSend.png" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
      
      <StackLayout Padding="5, 20, 5, 5" Orientation="Vertical" VerticalOptions="FillAndExpand"  >
        <Label x:Name="lblComplaintSent" Text="Vaš prigovor je poslan" FontSize="Large"  HorizontalTextAlignment="Center"  HorizontalOptions="FillAndExpand" TextColor="#6d7c85"  Margin="0, 90, 0, 0"/>
        <Label x:Name="lblMessage" Text="Zahvaljujemo na vašem angažmanu" FontSize="Medium"  HorizontalTextAlignment="Center"  HorizontalOptions="FillAndExpand" TextColor="#6d7c85"  Margin="0, 30, 0, 0"/>
      </StackLayout>
    </StackLayout>
  </ScrollView>
</ContentPage>