<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrigovorHR.Shared.Pages.APPMasterDetailPage"
             xmlns:pages="clr-namespace:PrigovorHR.Shared.Pages">

    <MasterDetailPage.Master>
    <pages:APPMasterDetailPageMaster x:Name="MasterPage">
        
    </pages:APPMasterDetailPageMaster>
    </MasterDetailPage.Master>
    
    <MasterDetailPage.Detail>
        <NavigationPage x:Name="DetailNavigationPage" BackgroundColor="White" BarBackgroundColor="Blue" >
            <NavigationPage.ToolbarItems>
                <ToolbarItem Name="tbiLogo" Order="Primary" Icon="LOGO.png" Text="Prigovor.HR" Priority="0"/>
                <ToolbarItem Name="tbiPrigovorText" Order="Primary" Text="Prigovor.HR" Priority="0"/>
                <ToolbarItem Name="tbiQRScanner" Order="Primary" Icon="awsomeQR.png" Priority="2" Clicked="tbiQRScanner_Clicked" />
                <ToolbarItem Name="tbiSearch" Order="Primary" Icon="awsomeSearch.png"  Priority="2" Clicked="tbiSearch_Clicked" />
            </NavigationPage.ToolbarItems>
            
       <x:Arguments>
       <pages:LandingPageWithLogin x:Name="LandingPageWithLogin" />
      </x:Arguments>
    </NavigationPage>
  </MasterDetailPage.Detail>
</MasterDetailPage>